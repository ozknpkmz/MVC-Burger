@using HamburgerMVC.Models.ViewModels;
@model MenuVM
@{
    Layout = null;
}


<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Burger</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- <link rel="manifest" href="site.webmanifest"> -->
    <link rel="shortcut icon" type="image/x-icon" href="/burger-master/img/favicon.png">
    <!-- Place favicon.ico in the root directory -->
    <!-- CSS here -->
    <link rel="stylesheet" href="/burger-master/css/bootstrap.min.css">
    <link rel="stylesheet" href="/burger-master/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/burger-master/css/magnific-popup.css">
    <link rel="stylesheet" href="/burger-master/css/font-awesome.min.css">
    <link rel="stylesheet" href="/burger-master/css/themify-icons.css">
    <link rel="stylesheet" href="/burger-master/css/nice-select.css">
    <link rel="stylesheet" href="/burger-master/css/flaticon.css">
    <link rel="stylesheet" href="/burger-master/css/animate.css">
    <link rel="stylesheet" href="/burger-master/css/slicknav.css">
    <link rel="stylesheet" href="/burger-master/css/style.css">
    <!-- <link rel="stylesheet" href="css/responsive.css"> -->
</head>

<body>
    <!--[if lte IE 9]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
        <![endif]-->
    <!-- header-start -->
    <header>
        <div class="header-area ">
            <div id="sticky-header" class="main-header-area">
                <div class="container-fluid p-0">
                    <div class="row align-items-center no-gutters">
                        <div class="col-xl-5 col-lg-5">
                            <div class="main-menu  d-none d-lg-block">
                                <nav>
                                    <ul id="navigation">
                                        <li><a asp-action="HomePage" asp-controller="Order">Home</a></li>
                                        <li><a asp-action="OrderList" asp-controller="Order">My Orders</a></li>
                                        @*<li><a href="about.html">About</a></li>*@
                                    </ul>
                                </nav>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-2">
                            <div class="logo-img">
                                <a href="#">
                                    <img src="/burger-master/img/logo.png" alt="">
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-5 col-lg-5 d-none d-lg-block">
                            <div class="book_room">
                                <div class="book_btn d-none d-xl-block">
                                    @if (User?.Identity?.IsAuthenticated ?? false)
                                    {
                                        <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Logout</a>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mobile_menu d-block d-lg-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- header-end -->
    <!-- slider_area_start -->
    <div class="slider_area">
        <div class="slider_active owl-carousel">
            <div class="single_slider  d-flex align-items-center slider_bg_1 overlay">
                <div class="container">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-xl-9 col-md-9 col-md-12">
                            <div class="slider_text text-center">
                                <div class="deal_text">
                                    <span>Big Deal</span>
                                </div>
                                <h3>
                                    Doe <br>
                                    Brothers
                                </h3>
                                <h4>Burger</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="single_slider  d-flex align-items-center slider_bg_2 overlay">
                <div class="container">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-xl-9 col-md-9 col-md-12">
                            <div class="slider_text text-center">
                                <div class="deal_text">
                                    <span>Big Deal</span>
                                </div>
                                <h3>
                                    Doe <br>
                                    Brothers
                                </h3>
                                <h4>Burger</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider_area_end -->

    <div class="best_burgers_area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section_title text-center mb-80">
                        <span>Burger Menu</span>
                        <h3>Best Ever Burgers</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- features_room_startt -->
    <div class="Burger_President_area">
        <div class="Burger_President_here">
            @foreach (var item in Model.mList)
            {

                <div class="single_Burger_President">
                    <div class="room_thumb">
                        <img src="/burger-master/img/burgers/1.png" alt="">
                        <div class="room_heading d-flex justify-content-between align-items-center">
                            <div class="room_heading_inner">
                                <span>$@item.MenuPrice</span>
                                <h3>@item.MenuName</h3>
                                <p>Great way to make your business appear trust <br> and relevant.</p>
                                <a asp-action="OrderDetail" asp-controller="Order" asp-route-id="@item.MenuId" class="boxed-btn3">Order Now</a>
                            </div>

                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
    <!-- features_room_end -->
    <!-- about_area_start -->
    <div class="about_area">
    </div>
    <!-- about_area_end -->

    <footer class="footer">
        <div class="copy-right_text">
            <div class="container">
                <div class="footer_border"></div>
                <div class="row">
                    <div class="col-xl-12">
                        <p class="copy_right text-center">
                            Copyright &copy;Doe Brothers | All rights reserved |
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <!-- JS here -->
    <script src="/burger-master/js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="/burger-master/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="/burger-master/js/popper.min.js"></script>
    <script src="/burger-master/js/bootstrap.min.js"></script>
    <script src="/burger-master/js/owl.carousel.min.js"></script>
    <script src="/burger-master/js/isotope.pkgd.min.js"></script>
    <script src="/burger-master/js/ajax-form.js"></script>
    <script src="/burger-master/js/waypoints.min.js"></script>
    <script src="/burger-master/js/jquery.counterup.min.js"></script>
    <script src="/burger-master/js/imagesloaded.pkgd.min.js"></script>
    <script src="/burger-master/js/scrollIt.js"></script>
    <script src="/burger-master/js/jquery.scrollUp.min.js"></script>
    <script src="/burger-master/js/wow.min.js"></script>
    <script src="/burger-master/js/nice-select.min.js"></script>
    <script src="/burger-master/js/jquery.slicknav.min.js"></script>
    <script src="/burger-master/js/jquery.magnific-popup.min.js"></script>
    <script src="/burger-master/js/plugins.js"></script>

    <!--contact js-->
    <script src="/burger-master/js/contact.js"></script>
    <script src="/burger-master/js/jquery.ajaxchimp.min.js"></script>
    <script src="/burger-master/js/jquery.form.js"></script>
    <script src="/burger-master/js/jquery.validate.min.js"></script>
    <script src="/burger-master/js/mail-script.js"></script>

    <script src="/burger-master/js/main.js"></script>

</body>

























